@model IEnumerable<RentACar.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<section class="vh-100 bg-image" style="background-image: url('../../images/renault_austral.jpg'); background-size: cover">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="card" style="border-radius: 15px">
                <div class="card-body p-5">

                    <table class="table align-middle mb-0" style="min-width: 500px !important">
                        <thead>
                            <tr style="border: none;">
                                <th style="border: none;padding: 0">
                                    Name
                                </th>
                                <th style="border: none"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="border: none">
                                    <td style="border: none">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td style="border: none; display:flex; justify-content:center">
                                        <a asp-area="" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning py-2 ml-1">Edit</a>
                                        <a asp-area="" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger py-2 ml-1">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
